<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="81dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/toast"
        app:srcCompat="@drawable/toast" />

    <TextView
        android:id="@+id/profile_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile_photo"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profile_photo"
        android:text="@string/toast"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/profile_messege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_Id"
        android:layout_alignBottom="@id/profile_photo"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profile_photo"
        android:text="@string/messege"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/profile_Id"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="@string/date"
        android:textSize="14sp" />
</RelativeLayout>